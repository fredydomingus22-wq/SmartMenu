generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model Organization {
  id         String        @id @default(uuid())
  name       String
  createdAt  DateTime      @default(now()) @map("created_at")
  updatedAt  DateTime      @updatedAt @map("updated_at")
  taxId      String?       @map("tax_id")
  address    String?
  city       String?
  country    String?
  phone      String?
  email      String?
  categories Category[]
  orderItems OrderItem[]
  orders     Order[]
  products   Product[]
  tables     Table[]
  tenants    Tenant[]
  users      UserProfile[]

  @@map("organizations")
  @@schema("public")
}

model Tenant {
  id             String        @id @default(uuid())
  organizationId String        @map("organization_id")
  name           String
  slug           String        @unique
  plan           PlanTier      @default(FREE)
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  description    String?
  address        String?
  city           String?
  phone          String?
  email          String?
  whatsapp       String?
  instagram      String?
  facebook       String?
  website        String?
  images         String[]      @default([])
  fiscalName     String?       @map("fiscal_name")
  nif            String?
  categories     Category[]
  orderItems     OrderItem[]
  orders         Order[]
  products       Product[]
  tables         Table[]
  organization   Organization  @relation(fields: [organizationId], references: [id])
  users          UserProfile[]
  branding       TenantBranding?
  loyaltyConfig  LoyaltyConfig?
  customers      CustomerProfile[]
  loyaltyRewards LoyaltyReward[]
  recommendations ProductRecommendation[]
  upsells         ProductUpsell[]
  menuSections    MenuSection[]
  footerConfig    FooterConfig?
  settings        TenantSettings?

  @@map("tenants")
  @@schema("public")
}

model TenantBranding {
  id             String   @id @default(uuid())
  tenantId       String   @unique @map("tenant_id")
  tenantName     String?  @map("tenant_name")
  logoUrl        String?  @map("logo_url")
  primaryColor   String?  @default("#2563EB") @map("primary_color")
  secondaryColor String?  @map("secondary_color")
  borderRadius   String?  @default("0.5rem") @map("border_radius")
  fontFamily     String?  @default("Inter") @map("font_family")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])

  @@map("tenant_brandings")
  @@schema("public")
}

model CustomerProfile {
  id             String              @id @default(uuid())
  userId         String              @map("user_id") @db.Uuid
  tenantId       String              @map("tenant_id")
  pointsBalance  Int                 @default(0) @map("points_balance")
  createdAt      DateTime            @default(now()) @map("created_at")
  updatedAt      DateTime            @updatedAt @map("updated_at")
  tenant         Tenant              @relation(fields: [tenantId], references: [id])
  user           users               @relation(fields: [userId], references: [id])
  transactions   PointsTransaction[]

  @@unique([userId, tenantId])
  @@map("customer_profiles")
  @@schema("public")
}

model LoyaltyConfig {
  id             String   @id @default(uuid())
  tenantId       String   @unique @map("tenant_id")
  isActive       Boolean  @default(false) @map("is_active")
  pointsPerUnit  Decimal  @default(1.0) @map("points_per_unit") @db.Decimal(10, 2)
  currencyUnit   Decimal  @default(1.0) @map("currency_unit") @db.Decimal(10, 2)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])

  @@map("loyalty_configs")
  @@schema("public")
}

model LoyaltyReward {
  id             String   @id @default(uuid())
  tenantId       String   @map("tenant_id")
  productId      String?  @map("product_id")
  name           String
  description    String?
  pointsRequired Int      @map("points_required")
  discountAmount Decimal? @map("discount_amount") @db.Decimal(10, 2)
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])

  @@map("loyalty_rewards")
  @@schema("public")
}

model PointsTransaction {
  id                String            @id @default(uuid())
  customerProfileId String            @map("customer_profile_id")
  tenantId          String            @map("tenant_id")
  amount            Int
  type              TransactionType
  description       String?
  orderId           String?           @map("order_id")
  createdAt         DateTime          @default(now()) @map("created_at")
  customerProfile   CustomerProfile   @relation(fields: [customerProfileId], references: [id])
  order             Order?            @relation(fields: [orderId], references: [id])

  @@map("points_transactions")
  @@schema("public")
}

enum TransactionType {
  EARNED
  REDEEMED
  ADJUSTED

  @@schema("public")
}

model UserProfile {
  id                   String        @id(map: "users_pkey") @db.Uuid
  email                String        @unique(map: "users_email_key")
  name                 String?
  role                 Role          @default(WAITER)
  organizationId       String?       @map("organization_id")
  tenantId             String?       @map("tenant_id")
  createdAt            DateTime      @default(now()) @map("created_at")
  oauth_authorizations users         @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "user_profile_oauth_fkey")
  organization         Organization? @relation(fields: [organizationId], references: [id], map: "users_organization_id_fkey")
  tenant               Tenant?       @relation(fields: [tenantId], references: [id], map: "users_tenant_id_fkey")

  @@map("user_profiles")
  @@schema("public")
}

model Category {
  id             String       @id @default(uuid())
  name           String
  organizationId String       @map("organization_id")
  tenantId       String       @map("tenant_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  organization   Organization @relation(fields: [organizationId], references: [id])
  tenant         Tenant       @relation(fields: [tenantId], references: [id])
  products       Product[]

  @@map("categories")
  @@schema("public")
}

model Product {
  id             String       @id @default(uuid())
  name           String
  description    String?
  price          Decimal      @db.Decimal(10, 2)
  imageUrl       String?      @map("image_url")
  isAvailable    Boolean      @default(true) @map("is_available")
  categoryId     String       @map("category_id")
  organizationId String       @map("organization_id")
  tenantId       String       @map("tenant_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  category       Category       @relation(fields: [categoryId], references: [id])
  organization   Organization   @relation(fields: [organizationId], references: [id])
  tenant         Tenant         @relation(fields: [tenantId], references: [id])
  orderItems     OrderItem[]
  images         ProductImage[]
  options        ProductOption[]
  recommendations ProductRecommendation[] @relation("ProductRecommendations")
  recommendedBy   ProductRecommendation[] @relation("RecommendedTo")
  upsells         ProductUpsell[] @relation("ProductUpsells")
  upsoldBy        ProductUpsell[] @relation("UpsellTo")

  @@map("products")
  @@schema("public")
}

model ProductOption {
  id             String               @id @default(uuid())
  productId      String               @map("product_id")
  name           String
  description    String?
  minChoices     Int                  @default(0) @map("min_choices")
  maxChoices     Int                  @default(1) @map("max_choices")
  isRequired     Boolean              @default(false) @map("is_required")
  tenantId       String               @map("tenant_id")
  organizationId String               @map("organization_id")
  createdAt      DateTime             @default(now()) @map("created_at")
  updatedAt      DateTime             @updatedAt @map("updated_at")
  product        Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  values         ProductOptionValue[]

  @@map("product_options")
  @@schema("public")
}

model ProductOptionValue {
  id             String            @id @default(uuid())
  optionId       String            @map("option_id")
  name           String
  price          Decimal           @default(0) @db.Decimal(10, 2)
  isAvailable    Boolean           @default(true) @map("is_available")
  tenantId       String            @map("tenant_id")
  organizationId String            @map("organization_id")
  createdAt      DateTime          @default(now()) @map("created_at")
  updatedAt      DateTime          @updatedAt @map("updated_at")
  option         ProductOption     @relation(fields: [optionId], references: [id], onDelete: Cascade)
  orderItemOptions OrderItemOption[]

  @@map("product_option_values")
  @@schema("public")
}

model OrderItemOption {
  id                  String             @id @default(uuid())
  orderItemId         String             @map("order_item_id")
  productOptionValueId String             @map("product_option_value_id")
  price               Decimal            @db.Decimal(10, 2)
  tenantId            String             @map("tenant_id")
  organizationId      String             @map("organization_id")
  orderItem           OrderItem          @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  optionValue         ProductOptionValue @relation(fields: [productOptionValueId], references: [id])

  @@map("order_item_options")
  @@schema("public")
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
  @@schema("public")
}

model Table {
  id             String       @id @default(uuid())
  number         Int
  qrCode         String?      @map("qr_code")
  organizationId String       @map("organization_id")
  tenantId       String       @map("tenant_id")
  orders         Order[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  tenant         Tenant       @relation(fields: [tenantId], references: [id])

  @@map("tables")
  @@schema("public")
}

model Order {
  id             String       @id @default(uuid())
  status         OrderStatus  @default(PENDING)
  total          Decimal      @db.Decimal(10, 2)
  tableId        String?      @map("table_id")
  userId         String?      @map("user_id") @db.Uuid
  organizationId String       @map("organization_id")
  tenantId       String       @map("tenant_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  items          OrderItem[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  table          Table?       @relation(fields: [tableId], references: [id])
  tenant         Tenant       @relation(fields: [tenantId], references: [id])
  user           users?       @relation(fields: [userId], references: [id])
  pointsTransactions PointsTransaction[]

  @@map("orders")
  @@schema("public")
}

model ProductRecommendation {
  id             String   @id @default(uuid())
  tenantId       String   @map("tenant_id")
  productId      String   @map("product_id")
  recommendedId  String   @map("recommended_id")
  createdAt      DateTime @default(now()) @map("created_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  product        Product  @relation("ProductRecommendations", fields: [productId], references: [id])
  recommended    Product  @relation("RecommendedTo", fields: [recommendedId], references: [id])

  @@unique([productId, recommendedId])
  @@map("product_recommendations")
  @@schema("public")
}

model ProductUpsell {
  id             String   @id @default(uuid())
  tenantId       String   @map("tenant_id")
  productId      String   @map("product_id")
  upsellId       String   @map("upsell_id")
  createdAt      DateTime @default(now()) @map("created_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  product        Product  @relation("ProductUpsells", fields: [productId], references: [id])
  upsell         Product  @relation("UpsellTo", fields: [upsellId], references: [id])

  @@unique([productId, upsellId])
  @@map("product_upsells")
  @@schema("public")
}

model MenuSection {
  id             String   @id @default(uuid())
  tenantId       String   @map("tenant_id")
  name           String
  type           String   // e.g., "hero", "featured", "category_grid"
  order          Int      @default(0)
  isActive       Boolean  @default(true) @map("is_active")
  config         Json?    @map("config")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])

  @@map("menu_sections")
  @@schema("public")
}

model FooterConfig {
  id             String   @id @default(uuid())
  tenantId       String   @unique @map("tenant_id")
  socials        Json?    // { "instagram": "...", "facebook": "..." }
  links          Json?    // [{ "label": "...", "url": "..." }]
  contactInfo    Json?    @map("contact_info") // { "phone": "...", "email": "..." }
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  tenant         Tenant   @relation(fields: [tenantId], references: [id])

  @@map("footer_configs")
  @@schema("public")
}

model TenantSettings {
  id                    String   @id @default(uuid())
  tenantId              String   @unique @map("tenant_id")
  enableRecommendations Boolean  @default(true) @map("enable_recommendations")
  enableUpsells         Boolean  @default(true) @map("enable_upsells")
  homeLayoutType        String   @default("standard") @map("home_layout_type")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
  tenant                Tenant   @relation(fields: [tenantId], references: [id])

  @@map("tenant_settings")
  @@schema("public")
}

model OrderItem {
  id             String       @id @default(uuid())
  orderId        String       @map("order_id")
  productId      String       @map("product_id")
  organizationId String       @map("organization_id")
  tenantId       String       @map("tenant_id")
  quantity       Int
  price          Decimal      @db.Decimal(10, 2)
  notes          String?
  order          Order        @relation(fields: [orderId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
  tenant         Tenant       @relation(fields: [tenantId], references: [id])
  product        Product      @relation(fields: [productId], references: [id])
  options        OrderItemOption[]

  @@map("order_items")
  @@schema("public")
}

