{
  "name": "smart-menu-root",
  "version": "1.0.0",
  "private": true,
  "start_url": "apps/web",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:fresh": "Get-Process -Name node -ErrorAction SilentlyContinue | Stop-Process -Force; Remove-Item -Path apps/web/.next -Recurse -Force -ErrorAction SilentlyContinue; npm run dev:web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:consumer": "npm run dev --workspace=apps/consumer",
    "dev:api": "npm run start:dev --workspace=apps/api",
    "dev:analytics": "cd apps/analytics && uvicorn main:app --reload",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "postinstall": "prisma generate",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "prisma": "^6.1.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "storybook": "^10.2.0",
    "@storybook/nextjs-vite": "^10.2.0",
    "@chromatic-com/storybook": "^5.0.0",
    "@storybook/addon-vitest": "^10.2.0",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/addon-onboarding": "^10.2.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "playwright": "^1.58.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "add": "^2.0.6",
    "jsonwebtoken": "^9.0.3",
    "radix-ui": "^1.4.3",
    "react-slider": "^2.0.6",
    "shadcn": "^3.7.0",
    "ts-node": "^10.9.2"
  }
}